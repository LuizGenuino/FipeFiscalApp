{
  "expo": {
    "name": "FiscalFipeApp",
    "slug": "FiscalFipeApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fiscalfipeapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "O aplicativo precisa acessar a câmera do seu dispositivo.",
        "NSMicrophoneUsageDescription": "O aplicativo precisa acessar o microfone do seu dispositivo."
      },
      "bundleIdentifier": "com.luizgenuino.FiscalFipeApp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.INTERNET"
      ],
      "package": "com.luizgenuino.FiscalFipeApp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "O aplicativo precisa acessar a câmera do seu dispositivo.",
          "enableMicrophonePermission": true,
          "microphonePermissionText": "O aplicativo precisa acessar o microfone do seu dispositivo.",
          "enableCodeScanner": true
        }
      ],
      "expo-video",
      "expo-sqlite",
      [
        "expo-media-library",
        {
          "photosPermission": "Permitir que o aplicativo Acesse sua galeria de fotos",
          "savePhotosPermission": "Permitir que o aplicativo Acesse sua galeria de fotos",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir que o aplicativo acesse sua localização"
        }
      ],
      "expo-video",
      "expo-file-system",
      "react-native-vision-camera"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3d2f72bf-e6a4-4e36-a099-bcafa30f4894"
      }
    }
  }
}
